<%- include('./partials/header') %>
<link rel="stylesheet" href="/css/leaderboard.css" />
<div class="container">
  <div class="quiz-btn">
    <a href="/quiz">Quizes Page</a>
  </div>
  <div class="heading"><h2><%= topic %></h2></div>
  <div class="table">
    <table>
      <tr>
        <th>Rank</th>
        <th>Name</th>
        <th>Score</th>
      </tr>

      <% var i = 0; %> <% users.forEach(function(user){ %> <% var score =
      user.scores[topic] %> <% i++; %>
      <tr>
        <th><%= i %></th>
        <th><%= user.username %></th>
        <th><%= score %></th>
      </tr>
      <% }) %>
    </table>
  </div>
</div>
