<form
  style="color: #11324d; font-weight: bold; font-size: x-large"
  method="POST"
  action="/admin/add"
>
  <div class="form-group row px-5 mt-5">
    <label for="inputText" class="col-sm-2 col-form-label">Course name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputText" name="title" />
    </div>
  </div>

  <div class="form-group row px-5">
    <label for="inputText" class="col-sm-2 col-form-label"
      >Course Description</label
    >
    <div class="col-sm-10">
      <textarea
        class="form-control"
        aria-label="With textarea"
        rows="7"
        name="description"
      ></textarea>
    </div>
  </div>

  <div class="form-group row px-5 my-5">
    <label for="url" class="col-sm-2 col-form-label">Enter url</label>
    <div class="col-sm-10">
      <input
        type="url"
        class="form-control"
        id="url"
        placeholder="https://example.com"
        name="link"
      />
    </div>
  </div>

  <div class="form-group row justify-content-center">
    <button
      type="submit"
      class="btn btn-lg btn-block col-md-6"
      style="background-color: #11324d; color: #e7e0c9; size: 150px"
    >
      Upload
    </button>
  </div>
</form>
